{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["expo", "react", "react-native"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/services/*": ["src/services/*"],
      "@/store/*": ["src/store/*"],
      "@/providers/*": ["src/providers/*"],
      "@/config/*": ["src/config/*"]
    }
  },
  "include": ["app", "src", "tamagui.config.ts", "app.config.ts"],
  "exclude": ["node_modules"]
}
